<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="doomlauncher.Controller">
   <children>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="Engine:" />
            <ComboBox fx:id="cbEngine"  />
            <Button  text="..." />
            <Button fx:id="btnAddEngine" onAction="#addEngine"  text="Add new" />
            <Label text="IWad:" />
            <ComboBox fx:id="cbIwad" 
            />
            <Button  text="...." />
         </children>
      </HBox>
      <Label text="Addition files:" />
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <ListView AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button  text="Button" />
            <Button  text="Button" />
            <Button  text="Button" />
         </children>
      </HBox>
      <Label text="Out:" />
      <TextArea editable="false" prefHeight="200.0" prefWidth="200.0" />
      
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button  text="Button" />
            <Button  text="Button" />
            <Button fx:id="btnLaunch"  onAction="#launch" text="Launch" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
